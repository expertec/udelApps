# Google Gemini API
# Obtén tu API key en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=tu_api_key_aqui

# Modelo de Gemini a usar (opcional)
# Opciones: models/gemini-1.5-pro, models/gemini-1.5-flash
GEMINI_MODEL=models/gemini-1.5-pro

# Firebase Service Account
# Descarga el JSON desde Firebase Console → Project Settings → Service Accounts
# Copia TODO el contenido del JSON como una sola línea
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Puerto del servidor (opcional, Render lo asigna automáticamente)
PORT=3000

# Ambiente (opcional)
NODE_ENV=production
